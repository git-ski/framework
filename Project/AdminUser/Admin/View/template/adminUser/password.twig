{% set AdminModel = "Project\\AdminUser\\Model\\AdminModel" %}
{% set form = self.form %}
<section class="content" id="main">
    <div class="row bg-title">
        {{self.containers.Breadcrumb.content|saferaw}}
        <div class="col-md-3">
            {{ 'FlashMessage' | flash | tf | alert }}
            <div class="form-group">
                <a href="{{ self.Router.linkto(ListController, null, {'search':'1'}) }}" class="btn btn-block bg-orange">一覧に戻る</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="body">
                    {{form.start}}
                    {{form.fieldsets.admin.elements.adminId}}
                    <div class="form-horizontal">
                        <fieldset>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group {{form.fieldsets.admin.elements.adminId.errorClass}}">
                                        {{form.fieldsets.admin.elements.adminId.error|saferaw}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group {{form.fieldsets.admin.elements.oldPassword.errorClass}}">
                                        <label class="col-md-4 control-label">
                                            {{ AdminModel|ProxyStatic('getPropertyLabel', 'oldPassword') }}
                                            {% if form.fieldsets.admin.elements.oldPassword.isRequired %}
                                                <label class="error">(必須)</label>
                                            {% endif %}
                                        </label>
                                        <div class="col-md-8">
                                            <div class="form-line">
                                                {{form.fieldsets.admin.elements.oldPassword|saferaw}}
                                            </div>
                                            <label class="error">
                                                {{form.fieldsets.admin.elements.oldPassword.error|saferaw}}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group {{form.fieldsets.admin.elements.adminPassword.errorClass}}">
                                        <label class="col-md-4 control-label">
                                            {{ AdminModel|ProxyStatic('getPropertyLabel', 'adminPassword') }}
                                            {% if form.fieldsets.admin.elements.adminPassword.isRequired %}
                                                <label class="error">(必須)</label>
                                            {% endif %}
                                        </label>
                                        <div class="col-md-8">
                                            <div class="form-line">
                                                {{form.fieldsets.admin.elements.adminPassword|saferaw}}
                                            </div>
                                            <label class="error">
                                                {{form.fieldsets.admin.elements.adminPassword.error|saferaw}}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group {{form.fieldsets.admin.elements.adminPasswordConfirm.errorClass}}">
                                        <label class="col-md-4 control-label">
                                            {{ AdminModel|ProxyStatic('getPropertyLabel', 'adminPasswordConfirm') }}
                                            {% if form.fieldsets.admin.elements.adminPasswordConfirm.isRequired %}
                                                <label class="error">(必須)</label>
                                            {% endif %}
                                        </label>
                                        <div class="col-md-8">
                                            <div class="form-line">
                                                {{form.fieldsets.admin.elements.adminPasswordConfirm|saferaw}}
                                            </div>
                                            <label class="error">
                                                {{form.fieldsets.admin.elements.adminPasswordConfirm.error|saferaw}}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ self.containers.SubForm.content | saferaw}}
                        </fieldset>
                        <hr class="m-t-0 m-b-40">
                        <fieldset>
                            <div class="row">
                                <div class="col-md-5"></div>
                                <div class="col-md-2 text-center">
                                    {{ form.elements.submit | saferaw }}
                                </div>
                                <div class="col-md-5"></div>
                            </div>
                        </fieldset>
                    </div>
                    {{form.end}}
                </div>
            </div>
        </div>
    </div>
</section>