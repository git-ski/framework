namespace {{module|ucfirst}}\{{type|ucfirst}}\View\ViewModel\{{namespace|ucfirst}};

use Std\ViewModel\AbstractViewModel;
use Project\Base\Admin\View\Layout\AdminPageLayout;
use {{useEditFieldset}};

/**
 * Class EditViewModel
 *
 * @category ViewModel
 * @package  {{module|ucfirst}}\{{type|ucfirst}}
 * @author  gpgkd906@gmail.com
 * @license  http://www.opensource.org/licenses/mit-license.php MIT
 * @link     https://github.com/git-ski/framework
 */
class EditViewModel extends RegisterViewModel
{
    protected $template = '/template/{{namespace|lcfirst}}/edit.twig';
    protected $confirmTemplate = '/template/{{namespace|lcfirst}}/edit.twig';
    protected $finishTemplate = null;

    protected $fieldset = [
        {{EditFieldset}}::class
    ];

    public $listeners = [
        self::TRIGGER_BEFORE_RENDER => 'onRender',
    ];

    /**
     * Method GetTemplateDir
     *
     * @return string templateDir
     */
    public function getTemplateDir(): string
    {
        return __DIR__ . '/..{{ns}}';
    }

    /**
     * Method onRender
     *
     * @return void
     */
    public function onRender(): void
    {
        $data = $this->getData();
        $data['{{entity|lcfirst}}'] = $data['{{entity|lcfirst}}']->toArray();
{% for name, property in EntityPropertyList if property.exclude != true %}
{% if property.type == "selectJoin" %}
        $data['{{entity|lcfirst}}']['{{name}}'] = $data['{{entity|lcfirst}}']['{{name}}']->get{{name}}Id();
{% endif %}
{% endfor %}

        $form = $this->getForm();
        $form->submit->addClass('btn btn-block bg-deep-orange');
        $form->submit->setValue('編集する');
        if (!$form->isConfirmed()) {
            $form->submit->setValue('確認する');
        }

        $form->setData($data);
    }
}
