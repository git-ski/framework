{% set InquiryActionModel = 'Project\\Inquiry\\Model\\InquiryActionModel' %}
{% set ListController = 'Project\\Inquiry\\Admin\\Controller\\InquiryAction\\ListController'%}
{% set form  = self.form %}
<section class="content" id="main">
    <div class="row bg-title">
        {{self.containers.Breadcrumb.content|saferaw}}
        <div class="col-md-3">
            {{ 'FlashMessage' | flash | tf | alert }}
            <div class="form-group">
                <a href="{{ self.Router.linkto(ListController, null, {'search':'1'}) }}" class="btn btn-block bg-orange">一覧に戻る</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="body">
                    {% do form.start() %}
                    <div class="form-horizontal">
                        {{ form.fieldsets.inquiryAction.elements.inquiryActionId | saferaw }}
                        <fieldset>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group {{ form.fieldsets.inquiryAction.elements.action.errorClass }}">
                                        <label class="control-label col-md-3">
                                            {{ InquiryActionModel|ProxyStatic('getPropertyLabel', 'action')}}
                                            {% if form.fieldsets.inquiryAction.elements.action.isRequired %}
                                                <label class="error">(必須)</label>
                                            {% endif %}
                                        </label>
                                        <div class="col-md-9">
                                            <div class="form-line">
                                                {{ form.fieldsets.inquiryAction.elements.action | saferaw }}
                                            </div>
                                            <label class="error">
                                                {{ form.fieldsets.inquiryAction.elements.action.error | saferaw }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group {{ form.fieldsets.inquiryAction.elements.description.errorClass }}">
                                        <label class="control-label col-md-3">
                                            {{ InquiryActionModel|ProxyStatic('getPropertyLabel', 'description')}}
                                            {% if form.fieldsets.inquiryAction.elements.description.isRequired %}
                                                <label class="error">(必須)</label>
                                            {% endif %}
                                        </label>
                                        <div class="col-md-9">
                                            <div class="form-line">
                                                {{ form.fieldsets.inquiryAction.elements.description | saferaw }}
                                            </div>
                                            <label class="error">
                                                {{ form.fieldsets.inquiryAction.elements.description.error | saferaw }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group {{ form.fieldsets.inquiryAction.elements.showPriority.errorClass }}">
                                        <label class="control-label col-md-3">
                                            {{ InquiryActionModel|ProxyStatic('getPropertyLabel', 'showPriority')}}
                                            {% if form.fieldsets.inquiryAction.elements.showPriority.isRequired %}
                                                <label class="error">(必須)</label>
                                            {% endif %}
                                        </label>
                                        <div class="col-md-9">
                                            <div class="form-line">
                                                {{ form.fieldsets.inquiryAction.elements.showPriority | saferaw }}
                                            </div>
                                            <label class="error">
                                                {{ form.fieldsets.inquiryAction.elements.showPriority.error | saferaw }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            {{ self.containers.SubForm.content | saferaw }}
                        </fieldset>

                        <hr class="m-t-20 m-b-40">

                        <fieldset>
                            <div class="row">
                                <div class="col-md-5"></div>
                                <div class="col-md-2">
                                    {{ form.elements.submit | saferaw }}
                                </div>
                                <div class="col-md-5"></div>
                            </div>
                        </fieldset>
                    </div>
                    {% do form.end %}
                </div>
            </div>
        </div>
    </div>
</section>
